{
  "name": "mac-storage-manager",
  "version": "1.0.0",
  "description": "Manage macOS storage: scan caches, Docker, dev tools, and safely free space",
  "main": "electron/main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "electron": "electron .",
    "electron:dev": "vite",
    "electron:start": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:mac": "vite build && electron-builder --mac"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": ["macos", "storage", "cleanup", "cache"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.storage-manager.app",
    "productName": "Storage Manager",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "icon": null
    },
    "files": ["dist/**/*", "electron/**/*"],
    "directories": { "output": "release" }
  }
}
